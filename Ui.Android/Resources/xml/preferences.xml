<?xml version="1.0" encoding="utf-8" ?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory
        android:title="@string/Data"
        android:key="pref_category_data">
    <!-- Sources? -->
    <Preference
      android:key="pref_reference_currencies"
      android:title="@string/ReferenceCurrencies" />
    <!-- Additional rates? -->
    <Preference
      android:key="pref_preferred_bitcoin"
      android:title="@string/PreferredBitcoinRate" />
  </PreferenceCategory>
  <PreferenceCategory
        android:title="@string/General"
        android:key="pref_category_general">
    <Preference
      android:key="pref_security"
      android:title="@string/Security" />
    <ListPreference
      android:key="default-page"
      android:title="@string/DefaultView"
      android:dialogTitle="@string/DefaultView" />
    <SwitchPreference
      android:key="auto-refresh-on-startup"
      android:title="@string/RefreshOnStartup"
      android:summary="@string/LoadRatesAndBalancesOnStartup"
      android:defaultValue="true" />
  </PreferenceCategory>
  <PreferenceCategory
        android:title="@string/Info"
        android:key="pref_category_info">
    <Preference
      android:key="pref_about"
      android:title="@string/About" />
    <Preference
      android:key="pref_privacy"
      android:title="@string/Privacy" />
  </PreferenceCategory>
</PreferenceScreen>