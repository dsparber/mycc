<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:i18n="clr-namespace:resources;assembly=MyCryptos"
	xmlns:components="clr-namespace:MyCryptos.view.components;assembly=MyCryptos"
	x:Class="view.CoinsView"
	Title="{i18n:Translate CoinsTitle}">
	<ContentPage.ToolbarItems>
		<ToolbarItem
			Text="{i18n:Translate Add}"
			Clicked="Add" />
		<ToolbarItem
			Text="{i18n:Translate Sources}"
			x:Name="SourcesToolbarItem"
			Clicked="SourcesClicked" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<StackLayout
			x:Name="Stack">
			<StackLayout.BackgroundColor>
				<OnPlatform
					x:TypeArguments="Color"
					Android="#EEE" />
			</StackLayout.BackgroundColor>
			<components:HeaderView
				x:Name="Header" />
			<components:SegmentedControl
				x:Name="Tabs" 
        Margin="0,0,0,10"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>