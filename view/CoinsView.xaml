<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:i18n="clr-namespace:resources;assembly=MyCryptos"
	xmlns:components="clr-namespace:MyCryptos.view.components;assembly=MyCryptos"
  xmlns:control="clr-namespace:Xamarin.Forms;assembly=Xamarin.Forms.CarouselView"
	x:Class="view.CoinsView"
	Title="{i18n:Translate CoinsTitle}">
  <ContentPage.ToolbarItems>
    <ToolbarItem
			Text="{i18n:Translate Add}"
			Clicked="Add" />
    <ToolbarItem
			Text="{i18n:Translate Sources}"
      x:Name="SourcesToolbarItem"
			Clicked="SourcesClicked" />
  </ContentPage.ToolbarItems>
  <ContentPage.Content>
    <StackLayout>
      <StackLayout.BackgroundColor>
        <OnPlatform x:TypeArguments="Color" Android="#EEE"/>
      </StackLayout.BackgroundColor>
      <components:HeaderView
				x:Name="Header" />
      <control:CarouselView x:Name="Carousel">
        <control:CarouselView.ItemTemplate>
          <DataTemplate>
            <ContentView Content="{Binding Content}"/>
          </DataTemplate>
        </control:CarouselView.ItemTemplate>
      </control:CarouselView>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>