<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:i18n="clr-namespace:resources;assembly=MyCryptos"
	x:Class="view.CoinsView"
	Title="{i18n:Translate CoinsTitle}">
	<ContentPage.ToolbarItems>
		<ToolbarItem
			Text="{i18n:Translate Add}"
			Clicked="AddCoin" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<StackLayout>
			<ContentView
				BackgroundColor="#0080FF"
				HeightRequest="240">
				<StackLayout
					VerticalOptions="CenterAndExpand">
					<Label
						x:Name="TotalMoneyLabel"
						FontSize="36"
						FontAttributes="Bold"
						HorizontalTextAlignment="Center"
						TextColor="White" />
					<StackLayout
						x:Name="LoadingPanel"
						IsVisible="false"
						Orientation="Horizontal"
						HorizontalOptions="Center">
						<Label
							Text="{i18n:Translate Refreshing}"
							TextColor="White">
						</Label>
						<ActivityIndicator
							Color="White"
							x:Name="LoadingIndicator"
							IsRunning="true" />
					</StackLayout>
				</StackLayout>
			</ContentView>
			<TableView
				Intent="Data"
				x:Name="CoinsTable" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>