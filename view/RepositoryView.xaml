<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:i18n="clr-namespace:resources;assembly=MyCryptos"
	xmlns:components="clr-namespace:MyCryptos.view.components;assembly=MyCryptos"
	x:Class="view.RepositoryView">
	<ContentPage.Content>
		<StackLayout>
      <StackLayout.BackgroundColor>
        <OnPlatform x:TypeArguments="Color" Android="#EEE"/>
      </StackLayout.BackgroundColor>
			<components:HeaderView
				x:Name="Header" />
			<TableView
				x:Name="TableView"
				Intent="Form"
				Margin="0,-8,0,0">
				<TableSection
					Title="{i18n:Translate Label}">
					<components:CustomEntryCell
						x:Name="RepositoryNameEntryCell"
						Title="{i18n:Translate Name}"
						Placeholder="{i18n:Translate Name}" />
				</TableSection>
				<TableSection
					x:Name="DeleteSection">
          <components:CustomViewCell
						x:Name="DeleteButtonCell"
						Text="{i18n:Translate Delete}"
						IsDeleteActionCell="true" />
				</TableSection>
			</TableView>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>