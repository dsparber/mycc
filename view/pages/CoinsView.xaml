<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:i18N="clr-namespace:MyCryptos.resources;assembly=MyCryptos"
	xmlns:components="clr-namespace:MyCryptos.view.components;assembly=MyCryptos"
  xmlns:constants="clr-namespace:constants;assembly=MyCryptos"
  BackgroundColor="{x:Static constants:AppConstants.BackgroundColor}"
	x:Class="view.CoinsView"
	Title="{i18N:Translate Coins}">
  <ContentPage.ToolbarItems>
    <ToolbarItem
			Text="{i18N:Translate Add}"
			Clicked="Add" />
    <ToolbarItem
     Text="{i18N:Translate Refresh}"
     Clicked="Refresh"/>
  </ContentPage.ToolbarItems>
  <ContentPage.Content>
    <components:ChangingStackLayout>

    <components:HeaderView
        x:Name="Header" />

      <StackLayout
      x:Name="Stack"
      Spacing="0" HorizontalOptions="FillAndExpand">
        <StackLayout.BackgroundColor>
          <OnPlatform
            x:TypeArguments="Color"
            Android="#EEE" />
        </StackLayout.BackgroundColor>
        <StackLayout.Children>
          <components:SegmentedControl
            x:Name="Tabs"/>
        </StackLayout.Children>
      </StackLayout>

    </components:ChangingStackLayout>

  </ContentPage.Content>
</ContentPage>