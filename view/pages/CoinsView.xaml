<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:i18n="clr-namespace:resources;assembly=MyCryptos"
	xmlns:components="clr-namespace:MyCryptos.view.components;assembly=MyCryptos"
  xmlns:constants="clr-namespace:constants;assembly=MyCryptos"
  BackgroundColor="{x:Static constants:AppConstants.BackgroundColor}"
	x:Class="view.CoinsView"
	Title="{i18n:Translate Coins}">
  <ContentPage.ToolbarItems>
    <ToolbarItem
			Text="{i18n:Translate Add}"
			Clicked="Add" />
  </ContentPage.ToolbarItems>
  <ContentPage.Content>
    <StackLayout Spacing="0">

      <components:HeaderView
        x:Name="Header" />

      <components:SegmentedControl
            x:Name="Tabs"/>

      <StackLayout
      x:Name="Stack"
      Spacing="0">
        <StackLayout.BackgroundColor>
          <OnPlatform
            x:TypeArguments="Color"
            Android="#EEE" />
        </StackLayout.BackgroundColor>
      </StackLayout>

    </StackLayout>
  </ContentPage.Content>
</ContentPage>