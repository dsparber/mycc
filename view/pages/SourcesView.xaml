<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:i18N="clr-namespace:resources;assembly=MyCryptos"
	xmlns:components="clr-namespace:MyCryptos.view.components;assembly=MyCryptos"
	xmlns:constants="clr-namespace:constants;assembly=MyCryptos"
	BackgroundColor="{x:Static constants:AppConstants.BackgroundColor}"
	x:Class="view.SourcesView"
	Title="{i18N:Translate Sources}">
	<ContentPage.ToolbarItems>
		<ToolbarItem
			Text="{i18N:Translate Add}"
			Clicked="Add" />
		<ToolbarItem
			Text="{i18N:Translate Refresh}"
			Clicked="Refresh" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
    <components:ChangingStackLayout>
			<components:HeaderView
				x:Name="Header" />
			<TableView
				Intent="Form">
				<TableView.BackgroundColor>
					<OnPlatform
						x:TypeArguments="Color"
						Android="#EEE" />
				</TableView.BackgroundColor>
				<TableSection
					x:Name="LocalSection"
					Title="{i18N:Translate Local}" />
				<TableSection
					x:Name="OnlineSection"
					Title="{i18N:Translate Online}" />
			</TableView>
		</components:ChangingStackLayout>
	</ContentPage.Content>
</ContentPage>