<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:i18N="clr-namespace:resources;assembly=MyCryptos"
	xmlns:components="clr-namespace:MyCryptos.view.components;assembly=MyCryptos"
	x:Class="view.SettingsView"
	Title="{i18N:Translate Settings}">
  <ContentPage.BackgroundColor>
    <OnPlatform x:TypeArguments="Color" Android="#EEE"/>
  </ContentPage.BackgroundColor>
  <ContentPage.Content>
    <components:ChangingStackLayout>
      <components:HeaderView
       x:Name="Header" />
    <TableView
        Intent="Settings">
      <TableSection
				Title="{i18N:Translate ReferenceCurrencies}"
				x:Name="CurrencySection">
      </TableSection>
      <TableSection
        Title="{i18N:Translate Appeareance}">
        <components:CustomViewCell 
          Text="{i18N:Translate Sorting}"
          x:Name="SortingCell" 
          Image="more.png"/>
      </TableSection>
      <TableSection
				Title="{i18N:Translate AutomaticallyRefresh}">
        <components:CustomSwitchCell
					x:Name="AutoRefresh"
					Title="{i18N:Translate RefreshOnStartup}" />
      </TableSection>
    </TableView>
    </components:ChangingStackLayout>
  </ContentPage.Content>
</ContentPage>