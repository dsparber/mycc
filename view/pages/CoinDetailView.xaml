<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:i18N="clr-namespace:MyCryptos.resources;assembly=MyCryptos"
	xmlns:components="clr-namespace:MyCryptos.view.components;assembly=MyCryptos"
	xmlns:constants="clr-namespace:constants;assembly=MyCryptos"
	BackgroundColor="{x:Static constants:AppConstants.BackgroundColor}"
	x:Class="view.CoinDetailView">
	<ContentPage.Content>
		<components:ChangingStackLayout>
			<components:HeaderView
				x:Name="Header" />
			<TableView
				Intent="Form">
				<TableView.BackgroundColor>
					<OnPlatform
						x:TypeArguments="Color"
						Android="#EEE" />
				</TableView.BackgroundColor>
				<TableSection
					Title="{i18N:Translate Accounts}"
					x:Name="AccountSection">
				</TableSection>
				<TableSection
					Title="{i18N:Translate EqualTo}"
					x:Name="EqualsSection">
				</TableSection>
			</TableView>
		</components:ChangingStackLayout>
	</ContentPage.Content>
</ContentPage>