<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:i18N="clr-namespace:resources;assembly=MyCryptos"
	xmlns:components="clr-namespace:MyCryptos.view.components;assembly=MyCryptos"
	xmlns:constants="clr-namespace:constants;assembly=MyCryptos"
	BackgroundColor="{x:Static constants:AppConstants.BackgroundColor}"
	Title="{i18N:Translate Accounts}"
	x:Class="view.RepositoryView">
	<ContentPage.ToolbarItems>
		<ToolbarItem
			x:Name="EditItem"
			Clicked="EditClicked"
			Text="{i18N:Translate Edit}" />
		<ToolbarItem
			x:Name="SaveItem"
			Clicked="SaveClicked"
			Text="{i18N:Translate Save}" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
    <components:ChangingStackLayout>
			<components:HeaderView
				x:Name="Header" />
			<TableView
				x:Name="TableView"
				Intent="Form">
				<TableView.BackgroundColor>
					<OnPlatform
						x:TypeArguments="Color"
						Android="#EEE" />
				</TableView.BackgroundColor>
				<TableSection
					Title="{i18N:Translate Accounts}"
					x:Name="AccountsSection" />
				<TableSection
					Title="{i18N:Translate Label}"
					x:Name="NameSection">
					<components:CustomEntryCell
						x:Name="RepositoryNameEntryCell"
						Title="{i18N:Translate Name}"
						Placeholder="{i18N:Translate Name}" />
				</TableSection>
				<TableSection
					x:Name="DeleteSection">
					<components:CustomViewCell
						x:Name="DeleteButtonCell"
						Text="{i18N:Translate Delete}"
						IsDeleteActionCell="true" />
				</TableSection>
			</TableView>
		</components:ChangingStackLayout>
	</ContentPage.Content>
</ContentPage>