<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:i18n="clr-namespace:resources;assembly=MyCryptos"
	xmlns:components="clr-namespace:MyCryptos.view.components;assembly=MyCryptos"
  xmlns:constants="clr-namespace:constants;assembly=MyCryptos"
  BackgroundColor="{x:Static constants:AppConstants.BackgroundColor}"
	x:Class="view.AccountsView"
	Title="{i18n:Translate Accounts}">
  <ContentPage.ToolbarItems>
    <ToolbarItem
			Text="{i18n:Translate Add}"
			Clicked="Add" />
    <ToolbarItem
       Text="{i18n:Translate Refresh}"
       Clicked="Refresh"/>
  </ContentPage.ToolbarItems>
  <ContentPage.Content>
    <StackLayout Spacing="0">

      <components:HeaderView
        x:Name="Header"/>

      <TableView
        Intent="Data"
        x:Name="AccountsTable" >
        <TableView.BackgroundColor>
          <OnPlatform x:TypeArguments="Color" Android="#EEE"/>
        </TableView.BackgroundColor>
      </TableView>

    </StackLayout>
  </ContentPage.Content>
</ContentPage>