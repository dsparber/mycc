<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:constants="clr-namespace:MyCC.Forms.constants;assembly=MyCC.Forms"
	xmlns:resources="clr-namespace:MyCC.Forms.Resources;assembly=MyCC.Forms"
	x:Class="MyCC.Forms.view.pages.PasswordView"
    BackgroundColor="{x:Static constants:AppConstants.ThemeColor}">
  <ContentPage.Content>
    <StackLayout>
      <Image
				Source="Icon.png"
				WidthRequest="120"
				Margin="0,50,0,0" />
      <Label
				Text="{resources:Translate AppName}"
				TextColor="White"
				Margin="10"
				FontSize="36"
				FontAttributes="Bold"
				HorizontalOptions="Center" />
      <Frame
				OutlineColor="White"
				x:Name="PinFrame"
				BackgroundColor="{x:Static constants:AppConstants.ThemeColor}"
				HasShadow="false"
				HorizontalOptions="Center"
				Padding="5"
				Margin="10">
        <Entry
					IsPassword="true"
					HorizontalOptions="Center"
					HorizontalTextAlignment="Center"
					Keyboard="Numeric"
					x:Name="PasswordEntry"
					PlaceholderColor="White"
					WidthRequest="80"
					TextColor="White"
					TextChanged="PinTextChanged" />
      </Frame>
      <ContentView
				VerticalOptions="FillAndExpand" />
      <Label
				Text="{resources:Translate Copyright}"
				TextColor="White"
				HorizontalOptions="Center"
				Margin="20" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>