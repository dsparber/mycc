<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:i18N="clr-namespace:MyCryptos.Forms.Resources;assembly=MyCryptos.Forms"
	xmlns:components="clr-namespace:MyCryptos.view.components;assembly=MyCryptos.Forms"
	xmlns:constants="clr-namespace:constants;assembly=MyCryptos.Forms"
	BackgroundColor="{x:Static constants:AppConstants.BackgroundColor}"
	x:Class="MyCryptos.Forms.view.pages.AccountDetailView">
	<ContentPage.ToolbarItems>
		<ToolbarItem
			Text="{i18N:Translate Refresh}"
			Clicked="Refresh"
			x:Name="RefreshItem"
			Icon="refresh.png" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<components:ChangingStackLayout
			x:Name="ChangingStack"
			BackgroundColor="{x:Static constants:AppConstants.TableBackgroundColor}">
			<ScrollView
				x:Name="Content"
				IsClippedToBounds="true" />
		</components:ChangingStackLayout>
	</ContentPage.Content>
</ContentPage>