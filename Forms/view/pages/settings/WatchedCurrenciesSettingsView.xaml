<?xml version="1.0" encoding="utf-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="MyCryptos.Forms.view.pages.settings.WatchedCurrenciesSettingsView"
	xmlns:i18N="clr-namespace:MyCryptos.Forms.Resources;assembly=MyCryptos.Forms"
	xmlns:components="clr-namespace:MyCryptos.view.components;assembly=MyCryptos.Forms"
	xmlns:constants="clr-namespace:constants;assembly=MyCryptos.Forms"
	BackgroundColor="{x:Static constants:AppConstants.TableBackgroundColor}"
	Title="{i18N:Translate Rates}">
	<ContentPage.ToolbarItems>
		<ToolbarItem
			Text="{i18N:Translate Add}"
			Clicked="Add" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<components:ChangingStackLayout>
			<components:HeaderView
				TitleText="{i18N:Translate AppName}"
				InfoText="{i18N:Translate CurrenciesForRateView}" />
			<ScrollView
				IsClippedToBounds="true">
				<StackLayout
					Spacing="0"
					BackgroundColor="{x:Static constants:AppConstants.TableBackgroundColor}">
					<Label
						Text="{i18N:Translate RatesCurrenciesInfo}"
						Margin="15,15,15,0"
						TextColor="{x:Static constants:AppConstants.TableSectionColor}"
						FontSize="14" />
					<TableView
						Intent="Settings">
						<TableSection
							Title="{i18N:Translate AdditionalCurrencies}"
							x:Name="AllCurrenciesSection" />
					</TableView>
				</StackLayout>
			</ScrollView>
		</components:ChangingStackLayout>
	</ContentPage.Content>
</ContentPage>