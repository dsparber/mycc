<?xml version="1.0" encoding="utf-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="MyCryptos.Forms.view.pages.settings.ReferenceCurrenciesSettingsView"
	xmlns:i18N="clr-namespace:MyCryptos.Forms.Resources;assembly=MyCryptos.Forms"
	xmlns:components="clr-namespace:MyCryptos.view.components;assembly=MyCryptos.Forms"
	Title="{i18N:Translate Currencies}">
	<components:ChangingStackLayout>
		<components:HeaderView
			TitleText="{i18N:Translate AppName}"
			x:Name="Header" />
		<TableView
			Intent="Settings">
			<TableSection
				Title="{i18N:Translate MainCurrencies}"
				x:Name="MainCurrenciesSection" />
			<TableSection
				Title="{i18N:Translate FurtherCurrencies}"
				x:Name="AllCurrenciesSection" />
		</TableView>
	</components:ChangingStackLayout>
</ContentPage>