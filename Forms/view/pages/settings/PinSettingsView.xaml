<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:i18N="clr-namespace:MyCryptos.Forms.Resources;assembly=MyCryptos.Forms"
	xmlns:components="clr-namespace:MyCryptos.view.components;assembly=MyCryptos.Forms"
	x:Class="MyCryptos.Forms.view.pages.settings.PinSettingsView"
	Title="{i18N:Translate Pin}">
	<ContentPage.Content>
		<components:ChangingStackLayout>
			<components:HeaderView
				TitleText="{i18N:Translate AppName}" />
			<TableView
				Intent="Form"
				x:Name="Table">
				<TableSection
					x:Name="ActionSection">
					<components:CustomViewCell
						IsActionCell="true"
						Tapped="EnableDisablePin"
						x:Name="EnableDisablePinCell" />
					<components:CustomViewCell
						IsActionCell="true"
						Text="{i18N:Translate ChangePin}"
						Tapped="ChangePin"
						x:Name="ChangePinCell" />
				</TableSection>
				<TableSection
					x:Name="FingerprintSection">
					<components:CustomSwitchCell
						Title="{i18N:Translate UseFingerprint}"
						x:Name="FingerprintCell" />
				</TableSection>
			</TableView>
		</components:ChangingStackLayout>
	</ContentPage.Content>
</ContentPage>